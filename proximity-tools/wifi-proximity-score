#!/usr/bin/env bash
#
# SPDX-License-Identifier: AGPL-3.0-or-later

_bin="$( \
  dirname \
    "$( \
      command \
        -v \
	  "env")")"
_lib="${_bin}/../lib"
source \
  "${_lib}/libcrash-bash/crash-bash"

# shellcheck disable=SC2034
_global_variables() {
  area_seed=()
  color=""
  quiet=""
}

_requirements() {
  local \
    _os
  _os="$( \
    uname \
      -o)"
  _scan_tool="iw"
  _pkg="iw-tools"
  if [[ "${_os}" == "Android" ]]; then
    _scan_tool="android"
    _pkg="android-wifi-utils"
  fi
  _check_cmd \
    "${_scan_tool}-bssid-scan" \
    "${_pkg}"
}

_sight_get() {
  local \
    _bssid="${1}"
  echo \
    "${_bssid}" | \
    sha256sum | \
      awk \
        '{print $1}'
}

# Proximity score
# $@: area seed (sha256sums of area bssids)
_wifi_proximity_score() {
  local \
    _scan_tool="${1}" \
    _pics=() \
    _bsss=() \
    _msg=() \
    _sight \
    _pic \
    _score=0 \
  shift \
    1
  _pics=(
    "$@"
  )
  _bsss=( $( \
    bssid-scan)
  )
  for _bssid in "${_bsss[@]}"; do
    _sight="$( \
      _sight_get \
        "${_bssid}")"
    for _pic in \
      "${_pics}"; do
      if [[ "${_pic}" == "${_sight}" ]]; then
        _score="$((_score + 1))"
      fi
    done
  done
  echo \
    "${_score}"
}

_scan_tool_auto_detect() {
  local \
    _os \
    scan_tool
  _scan_tool="iw"
  _os="$( \
    uname \
      -o)"
  if [[ "${_os}" == "Android" ]]; then
    _scan_tool="android"
  fi
  echo \
    "${_scan_tool}-bssid-scan"
}

_set_overrides() {
  _set_override \
    "scan" \
    "tool" \
    "$(_scan_tool_auto_detect)"
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _exit="${1}" \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true
Proximity score obtained using a WiFi scan metric
usage:
  $(_get "app" "name")
    [options]
    [area seed]
  options:
     -m                   Wifi scan tool.
                          Default: '$(_get "scan" "tool")'
     -h                   This message.
     -c                   Enable color output
     -v                   Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${_exit}"
}

# Shows configuration options.
_show_config() {
  local \
    _resolve_date
  TZ=UTC \
    printf \
      -v _resolve_date \
      '%(%FT%R%z)T' \
      "${SOURCE_DATE_EPOCH}"
  _msg_info "${app_name} configuration"
  _msg_info "             Resolve date:   $(_get "_resolve" "date")"
  _msg_info "                Scan tool:   $(_get "scan" "tool")"
  _msg_info "                Area seed:   $(_get "area" "seed")"
}

_globals
_global_variables
_requirements
# shellcheck disable=SC2034
while \
  getopts \
    'm:cvh?' \
    arg; do
  case \
    "${arg}" in
    m) override_scan_tool="${OPTARG}" ;;
    c) override_color="y" ;;
    v) override_quiet="n" ;;
    h|?) _set_overrides && \
         _usage \
           0 ;;
    *)
    _msg_error \
      "Invalid argument '${arg}'" \
      0
    _usage \
      1
    ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
area_seed=(
  "$@"
)
_set_overrides
if [[ "${area_seed[*]}" == "" ]]; then
  _msg_error \
    "no area seed given" \
    0
  _usage \
    1
fi
app_opts=(
  "$(_get \
       "scan" \
       "tool")"
  "${area_seed[@]}"
)
_show_config
_wifi_proximity_score \
  "${app_opts[@]}"

# vim:set sw=2 sts=-1 et:
